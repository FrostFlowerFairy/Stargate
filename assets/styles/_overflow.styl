/*

    OVERFLOW

    Media Query Extensions:
      -m-up = medium upwards
      -m  = medium
      -l-up = large

 */

.overflow-visible { overflow: visible; }
.overflow-hidden { overflow: hidden; }
.overflow-scroll { overflow: scroll; }
.overflow-auto { overflow: auto; }

.overflow-x-visible { overflow-x: visible; }
.overflow-x-hidden { overflow-x: hidden; }
.overflow-x-scroll { overflow-x: scroll; }
.overflow-x-auto { overflow-x: auto; }

.overflow-y-visible { overflow-y: visible; }
.overflow-y-hidden { overflow-y: hidden; }
.overflow-y-scroll { overflow-y: scroll; }
.overflow-y-auto { overflow-y: auto; }

@media $breakpoint-medium {
  .overflow-visible-m-up { overflow: visible; }
  .overflow-hidden-m-up { overflow: hidden; }
  .overflow-scroll-m-up { overflow: scroll; }
  .overflow-auto-m-up { overflow: auto; }
  .overflow-x-visible-m-up { overflow-x: visible; }
  .overflow-x-hidden-m-up { overflow-x: hidden; }
  .overflow-x-scroll-m-up { overflow-x: scroll; }
  .overflow-x-auto-m-up { overflow-x: auto; }

  .overflow-y-visible-m-up { overflow-y: visible; }
  .overflow-y-hidden-m-up { overflow-y: hidden; }
  .overflow-y-scroll-m-up { overflow-y: scroll; }
  .overflow-y-auto-m-up { overflow-y: auto; }
}

@media $breakpoint-medium-only {
  .overflow-visible-m { overflow: visible; }
  .overflow-hidden-m { overflow: hidden; }
  .overflow-scroll-m { overflow: scroll; }
  .overflow-auto-m { overflow: auto; }

  .overflow-x-visible-m { overflow-x: visible; }
  .overflow-x-hidden-m { overflow-x: hidden; }
  .overflow-x-scroll-m { overflow-x: scroll; }
  .overflow-x-auto-m { overflow-x: auto; }

  .overflow-y-visible-m { overflow-y: visible; }
  .overflow-y-hidden-m { overflow-y: hidden; }
  .overflow-y-scroll-m { overflow-y: scroll; }
  .overflow-y-auto-m { overflow-y: auto; }
}

@media $breakpoint-large {
  .overflow-visible-l-up{ overflow: visible; }
  .overflow-hidden-l-up{ overflow: hidden; }
  .overflow-scroll-l-up{ overflow: scroll; }
  .overflow-auto-l-up{ overflow: auto; }

  .overflow-x-visible-l-up{ overflow-x: visible; }
  .overflow-x-hidden-l-up{ overflow-x: hidden; }
  .overflow-x-scroll-l-up{ overflow-x: scroll; }
  .overflow-x-auto-l-up{ overflow-x: auto; }

  .overflow-y-visible-l-up{ overflow-y: visible; }
  .overflow-y-hidden-l-up{ overflow-y: hidden; }
  .overflow-y-scroll-l-up{ overflow-y: scroll; }
  .overflow-y-auto-l-up{ overflow-y: auto; }
}
