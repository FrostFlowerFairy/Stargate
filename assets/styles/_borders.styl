/*

    BORDERS
    Docs: http://tachyons.io/docs/themes/borders/

    Base:
      b = border

    Modifiers:
      a = all
      t = top
      r = right
      b = bottom
      l = left
      n = none

   Media Query Extensions:
     -m-up = medium upwards
     -m  = medium
     -l-up = large

*/

.ba
  border-style solid
  border-width 1px

.bt
  border-top-style solid
  border-top-width 1px

.br
  border-right-style solid
  border-right-width 1px

.bb
  border-bottom-style solid
  border-bottom-width 1px

.bl
  border-left-style solid
  border-left-width 1px

.bn
  border-style none
  border-width 0

@media $breakpoint-medium
  .ba-m-up
    border-style solid
    border-width 1px
  .bt-m-up
    border-top-style solid
    border-top-width 1px
  .br-m-up
    border-right-style solid
    border-right-width 1px
  .bb-m-up
    border-bottom-style solid
    border-bottom-width 1px
  .bl-m-up
    border-left-style solid
    border-left-width 1px
  .bn-m-up
    border-style none
    border-width 0

@media $breakpoint-medium-only
  .ba-m
    border-style solid
    border-width 1px
  .bt-m
    border-top-style solid
    border-top-width 1px
  .br-m
    border-right-style solid
    border-right-width 1px
  .bb-m
    border-bottom-style solid
    border-bottom-width 1px
  .bl-m
    border-left-style solid
    border-left-width 1px
  .bn-m
    border-style none
    border-width 0

@media $breakpoint-large
  .ba-l-up
    border-style solid
    border-width 1px
  .bt-l-up
    border-top-style solid
    border-top-width 1px
  .br-l-up
    border-right-style solid
    border-right-width 1px
  .bb-l-up
    border-bottom-style solid
    border-bottom-width 1px
  .bl-l-up
    border-left-style solid
    border-left-width 1px
  .bn-l-up
    border-style none
    border-width 0
