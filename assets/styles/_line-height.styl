:root
  for size in -1...8
    rfs((max(1, 1.3 - (size * 0.05))), ('--line-height-title-%s' % size))
    if size <= 3
      rfs((1.625 - (size * 0.05)), ('--line-height-copy-%s' % size))


// step 8 --> ~1
// step 3 --> ~1.1
// step -1 --> ~1.3

/*

   LINE HEIGHT / LEADING
   Docs: http://tachyons.io/docs/typography/line-height

   Media Query Extensions:
     -m-up = medium upwards
     -m  = medium
     -l-up = large

*/

.lh-solid
  line-height $line-height-solid
.lh-title
  line-height $line-height-title
.lh-copy
  line-height $line-height-copy
@media $breakpoint-medium
  .lh-solid-m-up
    line-height $line-height-solid
  .lh-title-m-up
    line-height $line-height-title
  .lh-copy-m-up
    line-height $line-height-copy

@media $breakpoint-medium-only
  .lh-solid-m
    line-height $line-height-solid
  .lh-title-m
    line-height $line-height-title
  .lh-copy-m
    line-height $line-height-copy

@media $breakpoint-large
  .lh-solid-l-up
    line-height $line-height-solid
  .lh-title-l-up
    line-height $line-height-title
  .lh-copy-l-up
    line-height $line-height-copy
