/*

   HEIGHTS
   Docs: http://tachyons.io/docs/layout/heights/

   Base:
     h = height
     min-h = min-height
     min-vh = min-height vertical screen height
     vh = vertical screen height

   Modifiers
     1 = 1st step in height scale
     2 = 2nd step in height scale
     3 = 3rd step in height scale
     4 = 4th step in height scale
     5 = 5th step in height scale

     -25   = literal value 25%
     -50   = literal value 50%
     -75   = literal value 75%
     -100  = literal value 100%

     -auto = string value of auto
     -inherit = string value of inherit

   Media Query Extensions:
     -m-up = medium upwards
     -m  = medium
     -l-up = large

*/

/* Height Scale */

.h1 { height: 1rem; }
.h2 { height: 2rem; }
.h3 { height: 4rem; }
.h4 { height: 8rem; }
.h5 { height: 16rem; }

/* Height Percentages - Based off of height of parent */

.h-25 {  height:  25%; }
.h-50 {  height:  50%; }
.h-75 {  height:  75%; }
.h-100 { height: 100%; }

.min-h-100 { min-height: 100%; }

/* Screen Height Percentage */

.vh-25 {  height:  25vh; }
.vh-50 {  height:  50vh; }
.vh-75 {  height:  75vh; }
.vh-100 { height: 100vh; }

.min-vh-100 { min-height: 100vh; }


/* String Properties */

.h-auto {     height: auto; }
.h-inherit {  height: inherit; }

@media $breakpoint-medium {
  .h1-m-up {  height: 1rem; }
  .h2-m-up {  height: 2rem; }
  .h3-m-up {  height: 4rem; }
  .h4-m-up {  height: 8rem; }
  .h5-m-up {  height: 16rem; }
  .h-25-m-up { height: 25%; }
  .h-50-m-up { height: 50%; }
  .h-75-m-up { height: 75%; }
  .h-100-m-up { height: 100%; }
  .min-h-100-m-up { min-height: 100%; }
  .vh-25-m-up {  height:  25vh; }
  .vh-50-m-up {  height:  50vh; }
  .vh-75-m-up {  height:  75vh; }
  .vh-100-m-up { height: 100vh; }
  .min-vh-100-m-up { min-height: 100vh; }
  .h-auto-m-up { height: auto; }
  .h-inherit-m-up { height: inherit; }
}

