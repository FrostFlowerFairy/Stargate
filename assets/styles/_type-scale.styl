// Not sure why this won't generate properly using a loop?
:root
  --font-size--1: $font-size-step['-1']
  --font-size-0: $font-size-step['0']
  --font-size-1: $font-size-step['1']
  --font-size-2: $font-size-step['2']
  --font-size-3: $font-size-step['3']
  --font-size-4: $font-size-step['4']
  --font-size-5: $font-size-step['5']
  --font-size-6: $font-size-step['6']
  --font-size-7: $font-size-step['7']

:root
  for size in -1...8
    rfs($font-size-step['' + size], ('--r-font-size-%s' % size))

/*

   TYPE SCALE
   Docs: http://tachyons.io/docs/typography/scale/

   Base:
    f = font-size

   Modifiers
     1 = 1st step in size scale
     2 = 2nd step in size scale
     3 = 3rd step in size scale
     4 = 4th step in size scale
     5 = 5th step in size scale
     6 = 6th step in size scale
     7 = 7th step in size scale

   Media Query Extensions:
     -m-up = medium upwards
     -m  = medium
     -l-up = large
*/

/* Type scale */
/* Modular type scale + relative weights */
for size in -1...8
  .rf{size}
    font-size 'var(--r-font-size-%s)' % size
  .f{size}
    font-size 'var(--font-size-%s)' % size
  .f{size},
  .rf{size}
    if size <= 3
      font-weight 'var(--font-weight-n-%s)' % size
      letter-spacing 'var(--letter-spacing-n-%s)' % size
      &.lh-copy
        line-height 'var(--line-height-copy-%s)' % size
    &.b
      font-weight 'var(--font-weight-b-%s)' % size
      letter-spacing 'var(--letter-spacing-b-%s)' % size
    &.lh-title
      line-height 'var(--line-height-title-%s)' % size

@media $breakpoint-medium
  for size in -1...8
    .rf{size}-m-up
      font-size 'var(--r-font-size-%s)' % size
    .f{size}-m-up
      font-size: $font-size-step['' + size]
      if size <= 3
        font-weight 'var(--font-weight-n-%s)' % size
        letter-spacing 'var(--letter-spacing-n-%s)' % size
      &.b
        font-weight 'var(--font-weight-b-%s)' % size
        letter-spacing 'var(--letter-spacing-b-%s)' % size

@media $breakpoint-medium-only
  for size in -1...8
    .f{size}-m
      font-size: $font-size-step['' + size]
      if size <= 3
        font-weight 'var(--font-weight-n-%s)' % size
        letter-spacing 'var(--letter-spacing-n-%s)' % size
      &.b
        font-weight 'var(--font-weight-b-%s)' % size
        letter-spacing 'var(--letter-spacing-b-%s)' % size

@media $breakpoint-large
  for size in -1...8
    .rf{size}-l-up
      font-size 'var(--r-font-size-%s)' % size
    .f{size}-l-up
      font-size: $font-size-step['' + size]
      if size <= 3
        font-weight 'var(--font-weight-n-%s)' % size
        letter-spacing 'var(--letter-spacing-n-%s)' % size
      &.b
        font-weight 'var(--font-weight-b-%s)' % size
        letter-spacing 'var(--letter-spacing-b-%s)' % size
