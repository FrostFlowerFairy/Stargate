/* Variables */

:root
  // Elevation styles
  --elevation-1: 0px 0px 1px rgba(0, 0, 0, 0.07), 0px 0.5px 3px rgba(0, 0, 0, 0.1), 0px 1.25px 6px rgba(0, 3, 66, 0.08);
  --elevation-4: 0px 0px 1px rgba(0, 0, 0, 0.07), 0px 2px 4px rgba(0, 0, 0, 0.09), 0px 5px 11px rgba(0, 3, 66, 0.09)
  --elevation-8: 0px 0px 1px rgba(0, 0, 0, 0.07), 0px 4px 8px rgba(0, 0, 0, 0.07), 0px 10px 22px rgba(0, 3, 66, 0.1)
  --elevation-12: 0px 0px 1px rgba(0, 0, 0, 0.07), 0px 6px 12px rgba(0, 0, 0, 0.06), 0px 15px 33px rgba(0, 3, 66, 0.11)
  --elevation-16: 0px 0px 1px rgba(0, 0, 0, 0.07), 0px 8px 16px rgba(0, 0, 0, 0.05), 0px 20px 44px rgba(0, 3, 66, 0.12)
  --elevation-24: 0px 0px 1px rgba(0, 0, 0, 0.07), 0px 12px 24px rgba(0, 0, 0, 0.02), 0px 30px 66px rgba(0, 3, 66, 0.14)


/*

  BOX-SHADOW
  Docs: http://tachyons.io/docs/themes/box-shadow/

  Media Query Extensions:
   -m-up = medium upwards
   -m  = medium
   -l-up = large

 */

.elevation-0
  box-shadow none
.elevation-1
  box-shadow var(--elevation-1)
.elevation-4
  box-shadow var(--elevation-4)
.elevation-8
  box-shadow var(--elevation-8)
.elevation-12
  box-shadow var(--elevation-12)
.elevation-16
  box-shadow var(--elevation-16)
.elevation-24
  box-shadow var(--elevation-24)
